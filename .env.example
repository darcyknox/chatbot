# Copy this to .env and fill values to enable LUIS / Azure Bot integration.
# For local testing you can leave MICROSOFT_APP_ID and MICROSOFT_APP_PASSWORD empty.
PORT=3978

# Azure Bot registration (for channels / emulator)
MICROSOFT_APP_ID=
MICROSOFT_APP_PASSWORD=

